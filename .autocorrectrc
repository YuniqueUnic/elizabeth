# yaml-language-server: $schema=https://huacnlee.github.io/autocorrect/schema.json
# 规则配置
# 0 - 关闭, 1 - 错误（error）, 2 - 警告（warning）
rules:
  # 在中文和英文单词之间自动添加空格
  # 例如: "你好world" -> "你好 world"
  space-word: 1
  # 在中文和某些标点符号之间添加空格
  # 例如: "你好,世界" -> "你好，世界"
  space-punctuation:
  # 在中文和括号之间添加空格
  # 例如: "你好(世界)" -> "你好 (世界)"
  space-bracket: 1
  # 在中文和反引号之间添加空格
  # 例如: "代码`code`示例" -> "代码 `code` 示例"
  space-backticks: 1
  # 在中文和破折号之间添加空格
  # 例如: "你好-世界" -> "你好 - 世界"
  space-dash: 0
  # 在中文和美元符号之间添加空格
  # 例如: "价格$10" -> "价格 $10"
  space-dollar: 1
  # 将半角标点转换为全角（在中文环境中）
  # 例如: "你好." -> "你好。"
  fullwidth: 1
  # 删除全角标点符号前后的空格
  # 例如: "你好 。" -> "你好。"
  no-space-punctuation: 1
  # 将全角英文字母和数字转换为半角
  # 例如: "ＨＥＬＬＯ" -> "HELLO"
  halfwidth-word: 1
  # 在英文环境中将全角标点转换为半角
  # 例如: "Hello，World。" -> "Hello, World."
  halfwidth-punctuation: 1
  # Spellcheck
  spellcheck: 2
# Enable or disable in special context
context:
  # Enable or disable to format codeblock in Markdown or AsciiDoc etc.
  codeblock: 1
